{
  "name": "Wahpa",
  "description": "use markdown to manage bookmarks",
  "version": "0.3",
  "permissions": ["tabs", "clipboardWrite"],
  // "background": {
  //   "persistent": false,
  //   "scripts": ["background.js"]
  // },
  "browser_action": {
    "default_icon": "icon.png", 
    "default_title": "show tab",
    "default_popup": "popup.html"
  },

  "content_scripts": [ {
    "js": [ "jquery-ui.js", "jquery-1.9.1.js" ],
    "matches": [ "http://*/*", "https://*/*"]
  }],

  "manifest_version": 2
}
